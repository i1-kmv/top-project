{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        //В какую спецификацию компилируем
        "target": "es5",
        "jsx": "react-jsx",
        //Компилятор обработает не только TS файлы но и JS
        "allowJs": true,
        "moduleResolution": "node",
        // Для абсолютного импорта
        "baseUrl": ".",
        "paths": {
            "*": ["./src/*"]
        },
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": [
        ".config/jest/setupTest.ts"
    ]
}
